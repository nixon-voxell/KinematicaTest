}

#clipsHeaders {
    flex-direction: Row;
    justify-content: space-between;
}

#animationLabel {
    flex: 3 0 0;
}

.flexGrowClass {
    flex: 1 0 0 ;
}

#tagHeader {
    flex: 1 0 0;
}

#animationLibrary {
    flex: 1 0 0;
    border-top-width : 1px;
